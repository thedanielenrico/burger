<div class="container">
  <div class="row m-5">
    <div class="col text-center">
      <h2 class="text-center display-4">
        Burger Menu
      </h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <p>
          #{{id}}: {{burger_name}}
          <button class="change-devour btn btn-primary" data-id="{{id}}" data-devour="{{devoured}}">
            Eat it!
          </button>
        </p>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col text-center">
      <h2 class="text-center display-4">
        Devoured Burgers!
      </h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <p>
          #{{id}}: {{burger_name}}
        </p>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>


  <div class="row">
    <div class="col">
      <h3 class="text-center display-4">
        Add a new burger!
      </h3>
      <form class="text-center">
        New burger name: <input type="text" name="burgerName" id="newBurgerName" placeholder="name" class=""><br>
        <input type="submit" value="Make it!" id="submit" class="btn btn-primary m-3">
      </form>
    </div>
  </div>
</div>